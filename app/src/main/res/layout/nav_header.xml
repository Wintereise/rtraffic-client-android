<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/background_poly"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:src="@drawable/ic_account_circle_white_48dp"
        android:id="@+id/profile_image_R8"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.32999998"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/window_background"/>


    <TextView
    android:text="Signed out"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/headerUsername"
    android:textSize="14sp"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/profile_image_R8"
    app:layout_constraintLeft_toLeftOf="@+id/profile_image_R8"
    app:layout_constraintRight_toRightOf="@+id/profile_image_R8"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="16dp"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>