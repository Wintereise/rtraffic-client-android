<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:elevation="7dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:weightSum="1">

        <include
            layout="@layout/toolbar_generic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="se.winterei.rtraffic.MainActivity">

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/fab_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                fab:fab_addButtonColorNormal="@color/accent"
                fab:fab_addButtonColorPressed="@color/accent_light"
                fab:fab_addButtonPlusIconColor="@color/icons"
                fab:fab_expandDirection="up"
                fab:fab_labelStyle="@style/menu_labels_style"
                android:layout_marginBottom="65dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_report_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="@color/white"
                    fab:fab_colorPressed="@color/white_pressed"
                    fab:fab_size="mini"
                    fab:fab_icon="@drawable/ic_info_outline_black_18dp"
                    fab:fab_title="@string/info_report"/>
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_report_traffic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="@color/white"
                    fab:fab_title="@string/traffic_report"
                    fab:fab_size="mini"
                    fab:fab_icon="@drawable/ic_traffic_black_18dp"
                    fab:fab_colorPressed="@color/white_pressed"/>
            </com.getbase.floatingactionbutton.FloatingActionsMenu>
        </fragment>
    </LinearLayout>


    <include
        layout="@layout/nav_drawer" />




</android.support.v4.widget.DrawerLayout>
